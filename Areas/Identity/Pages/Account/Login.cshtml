@page
@model LoginModel

@{
    Layout = null; // or false
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login</title>
    <!-- Font Icon -->
    <link rel="stylesheet" href="~/register/fonts/material-icon/css/material-design-iconic-font.min.css">
    <!-- Main css -->
    <link rel="stylesheet" href="~/register/css/style.css">
    <link rel="stylesheet" href="~/validationStyle.css" />

</head>
<body>
    <div class="main">
        <!-- Sing in  Form -->
        <section class="sign-in">
            <div class="container">
                <div class="screen"></div>
                <div class="signin-content">
                    <div class="signin-image" style="width: auto; margin: 0">
                        <div class="logo">
                            <span class="navbar-brand" style="margin-left: 24px;">
                                <img src="~/assets/images/iti-logo.png" alt="Logo" width="33" height="50" class="d-inline-block align-text-top">
                            </span>
                            <div class="navbarvr"></div>
                            <span>Hub</span>
                        </div>
                    </div>
                    <div class="signin-form slide-down" style="display:table;width:auto;margin:50px auto !important;">
                        <h2 class="form-title">Sign In</h2>
                        <form  id="account" method="POST" class="register-form" >

                            <div class="validationWrapper">
                                <div class="form-group">
                                    <label asp-for="Input.UserName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                    <input asp-for="Input.UserName" class="form-control" aria-label="Sizing example input" placeholder="Enter track name">
                                </div>
                                <span asp-validation-for="Input.UserName" class="validation-error" style=" width:auto"></span>
                            </div>

                            <div class="validationWrapper">
                                <div class="form-group">
                                    <label asp-for="Input.Password"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                    <input asp-for="Input.Password" class="form-control" aria-label="Sizing example input" placeholder="Enter track name">
                                </div>
                                <span asp-validation-for="Input.Password" class="validation-error" style=" width:auto"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="Input.RememberMe" type="checkbox"  class="agree-term" />
                                <label asp-for="Input.RememberMe" class="label-agree-term"><span><span></span></span>Remember me</label>
                            </div>

                            <div asp-validation-summary="ModelOnly" class="validation-error"></div>

                            <div class="form-group form-button">
                                <button id="login-submit" type="submit" class="form-submit loginBbtn" style="width:100%">Log in</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>

    </div>

    @section Scripts 
    {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>

